{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Group",
    "description": "This schema is for creating a group of authenticated users in Cordra for the purpose of access control.",
    "properties": {
        "@id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "users": {
            "type": "array",
            "format": "table",
            "title": "Users",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "User",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "User",
                                "Group"
                            ]
                        }
                    }
                }
            },
            "cordra": {
                "auth": "usersList"
            }
        },
        "identifier": {
            "type": "array",
            "title": "Identifers",
            "items": {
                "type": "object",
                "title": "Identifer",
                "properties": {
                    "@type": {
                        "type": "string",
                        "default": "PropertyValue"
                    },
                    "propertyID": {
                        "title": "Identifier Type",
                        "type": "string"
                    },
                    "value": {
                        "title": "Identifier Value",
                        "type": "string"
                    }
                },
                "required": [
                    "@type"
                ]
            }
        },
        "name": {
            "type": "string",
            "title": "Name",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "alternateName": {
            "type": "string",
            "title": "Alternate Name"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "format": "textarea"
        },
        "url": {
            "type": "string",
            "title": "URL"
        },
        "@context": {
            "type": "string",
            "default": "http://schema.org/"
        },
        "@type": {
            "type": "string",
            "default": "Organization"
        },
        "address": {
            "type": "string",
            "title": "Physical Address",
            "format": "textarea"
        },
        "contactPoint": {
            "type": "array",
            "title": "Contact Points",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Contact Point",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Person",
                                "User"
                            ]
                        }
                    }
                }
            }
        },
        "email": {
            "type": "string",
            "title": "E-Mail Address"
        },
        "telephone": {
            "type": "string",
            "title": "Telephone"
        },
        "subOrganization": {
            "type": "array",
            "title": "Child Organizations",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Child Organization",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "parentOrganization": {
            "type": "array",
            "title": "Parent Organizations",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Parent Organization",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "member": {
            "type": "array",
            "title": "Member Organizations/Persons",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Member Organization/Person",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization",
                                "User",
                                "Person"
                            ]
                        }
                    }
                }
            }
        },
        "memberOf": {
            "type": "array",
            "title": "Member of Organizations",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Member of Organization",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization"
                            ]
                        }
                    }
                }
            }
        }
    },
    "required": [
        "@type"
    ]
}