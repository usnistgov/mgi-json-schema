{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "DutyAction",
    "description": "This schema is for describing an Duty Action Entry in Cordra.",
    "required": [
        "@id",
        "@context",
        "@type"
    ],
    "definitions": {
        "materialLinked": {
            "type": "array",
            "title": "Materials",
            "description": "This field is for linking to any substance (e.g., sample, specimen, material, chemical, etc.), or a specific sup-sample (e.g., location on a larger artifact, sub-portion of a larger artifact, item within a collection of specimens, etc.).",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Material",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Material"
                            ]
                        }
                    }
                }
            }
        },
        "QuantitativeValue": {
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string",
                    "default": "QuantitativeValue"
                },
                "name": {
                    "type": "string",
                    "title": "Name"
                },
                "value": {
                    "title": "Value",
                    "type": "number"
                },
                "unitText": {
                    "title": "Unit Text",
                    "type": "string"
                },
                "unitCode": {
                    "title": "Unit Code",
                    "type": "string",
                    "cordra": {
                        "type": {
                            "handleReference": {
                                "types": [
                                    "UnitOfMeasurement"
                                ]
                            }
                        }
                    }
                }
            }
        },
        "measurementTechnique": {
            "type": "array",
            "title": "Synthesis/Measurement/Computational Technique or Instrument/Software Used",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Referenced Item",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm",
                                "Instrument",
                                "SoftwareApplication",
                                "SoftwareSourceCode"
                            ]
                        }
                    }
                }
            }
        }
    },
    "properties": {
        "@context": {
            "type": "array",
            "default": [
                "http://schema.org/",
                {
                    "mat": "https://pages.nist.gov/material-schema/"
                }
            ]
        },
        "@type": {
            "type": "array",
            "default": [
                "Action",
                "mat:DutyAction"
            ]
        },
        "@id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "identifier": {
            "type": "array",
            "title": "Identifers",
            "items": {
                "type": "object",
                "title": "Identifer",
                "properties": {
                    "@type": {
                        "type": "string",
                        "default": "PropertyValue"
                    },
                    "propertyID": {
                        "title": "Property IDs",
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "title": "Property ID",
                            "type": "string",
                            "cordra": {
                                "type": {
                                    "handleReference": {
                                        "types": [
                                            "DefinedTerm"
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "name": {
                        "title": "Identifier Type/Name",
                        "type": "string"
                    },
                    "value": {
                        "title": "Identifier Value",
                        "type": "string"
                    }
                }
            }
        },
        "name": {
            "type": "string",
            "title": "Name",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "alternateName": {
            "type": "string",
            "title": "Alternate Name",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "description": {
            "type": "string",
            "title": "Description",
            "format": "textarea",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "url": {
            "type": "string",
            "title": "URL"
        },
        "image": {
            "type": "array",
            "title": "Image URLs",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Image URL"
            }
        },
        "about": {
            "type": "array",
            "title": "About",
            "description": "This is for linking controlled vocabulary terms and parent projects.",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Subject/Project",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm",
                                "Project",
                                "Collection"
                            ]
                        }
                    }
                }
            }
        },
        "keywords": {
            "type": "array",
            "title": "Keywords",
            "description": "This is for user-defined terms.",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Keyword"
            }
        },
        "actionStatus": {
            "type": "array",
            "title": "Action Status",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Defined Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "agent": {
            "type": "array",
            "title": "Agents",
            "description": "The direct performer or driver of the action (animate or inanimate).",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Agent",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "User",
                                "Person",
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "participant": {
            "type": "array",
            "title": "Participants",
            "description": "Other co-agents that participated in the action indirectly.",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Participant",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "User",
                                "Person",
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "location": {
            "type": "array",
            "title": "Location",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Place",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Place"
                            ]
                        }
                    }
                }
            }
        },
        "material": {
            "title": "Material",
            "description": "The material upon which the action is carried out",
            "$ref": "#/definitions/materialLinked"
        },
        "materialExtent": {
            "title": "Material Quantity",
            "$ref": "#/definitions/QuantitativeValue"
        },
        "materialReference": {
            "title": "Reference Material",
            "$ref": "#/definitions/materialLinked"
        },
        "materialReferenceExtent": {
            "title": "Reference Material Quantity",
            "$ref": "#/definitions/QuantitativeValue"
        },
        "instrument": {
            "title": "Instrument",
            "description": "The instrument or tool that helped the agent perform the action (e.g., instrument used to perform the measurement).",
            "$ref": "#/definitions/measurementTechnique"
        },
        "object": {
            "title": "Object",
            "description": "The non-material object upon which the action is carried out",
            "$ref": "#/definitions/measurementTechnique"
        },
        "startTime": {
            "title": "Start Time",
            "type": "string"
        },
        "endTime": {
            "title": "End Time",
            "type": "string"
        }
    }
}