{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Thing",
    "definitions": {"Thing": {
        "type": "object",
        "properties": {
            "identifier": {
                "type": "array",
                "title": "Identifers",
                "items": {
                    "type": "object",
                    "title": "Identifer",
                    "properties": {
                        "@type": {
                            "type": "string",
                            "default": "PropertyValue"
                        },
                        "propertyID": {
                            "title": "Identifier Type",
                            "type": "string"
                        },
                        "value": {
                            "title": "Identifier Value",
                            "type": "string"
                        }
                    }
                }
            },
            "name": {
                "type": "string",
                "title": "Name",
                "cordra": {"preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }}
            },
            "alternateName": {
                "type": "string",
                "title": "Alternate Name"
            },
            "description": {
                "type": "string",
                "title": "Description",
                "format": "textarea"
            },
            "url": {
                "type": "string",
                "title": "URL"
            }
        }
    }}
}